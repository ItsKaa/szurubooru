@import colors

.post-container
    .post-content
        &.post-error
            background-image:
                repeating-linear-gradient(45deg, #1a1a1a, #1a1a1a 10px, #333 10px, #333 20px)
            background-position: 0 0, 0 10px, 10px -10px, -10px 0px
            background-repeat: repeat
            background-size: 20px 20px

    text-align: center
    .post-content
        text-align: left
        margin: 0 auto
        position: relative

        .resize-listener
            background-repeat: no-repeat
            background-size: cover
            position: absolute
            left: 0
            right: 0
            top: 0
            bottom: 0
            width: 100%
            height: 100%

        img
            image-orientation: from-image

.darktheme .post-container .post-content
    &.post-error
        background-image:
            repeating-linear-gradient(45deg, #1a1a1a, #1a1a1a 10px, #333 10px, #333 20px)
        background-position: 0 0, 0 10px, 10px -10px, -10px 0px
        background-repeat: repeat
        background-size: 20px 20px
