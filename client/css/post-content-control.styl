@import colors

.post-container
    .post-content.transparency-grid img
        background-image:
            repeating-linear-gradient(45deg, #1a1a1a, #1a1a1a 10px, #333 10px, #333 20px)

    text-align: center
    .post-content
        text-align: left
        margin: 0 auto
        position: relative

        .resize-listener
            position: absolute
            left: 0
            right: 0
            top: 0
            bottom: 0
            width: 100%
            height: 100%

        img
            image-orientation: from-image
